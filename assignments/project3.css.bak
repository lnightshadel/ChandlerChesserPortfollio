@keyframes desc {
	0% {color:#ffffff;}
	20% {color:#336699;}
	40% {color:#33CCFF;}
	60% {color:#663300;}
	80% {color:#6633FF;}
	100% {color:#6699CC;}
}
h2 {opacity:0;}
h2:hover {opacity:1; background-color: rgba(0, 0, 0, .9); animation:desc 20s infinite;}

#door{
	position:relative;
	left:15%;
	text-align:center;
	background-image: url(../Images/door.gif);
	background-repeat:no-repeat;
	width:500px;
	height:300px;
}
@keyframes poster {
	0% {opacity:0.9}
	10% {opacity:0.7}
	20% {opacity:0.5}
	30% {opacity:0.3}
	40% {opacity:0.1}
	50% {left:35%; background-image: url(../Images/poster.png);}
	60% {opacity:1;}
	70% {opacity:1;}
	80% {opacity:1;}
	90% {opacity:1;}
	100% {opacity:1;}
	
}
#door:hover {
	animation:poster 20s infinite;
	
}
